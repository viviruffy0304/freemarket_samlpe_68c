              %span
                送料込み
          .itemDetail 
            = @item.name
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td 
                    =link_to @item.seller.nickname
                %tr
                  %th カテゴリー
                  %td
                    =@item.category_id
                %tr
                  %th ブランド
                  %td
                
                %tr
                  %th 商品の説明
                  %td 
                    =@item.description
                %tr
                  %th 商品の状態
