                    =@item.state
                    
                %tr
                  %th 配送料の負担
                  %td 
                    =@item.postage
                    
                %tr
                  %th 発送元の地域
                  %td
                    =@item.region
                    
                %tr
                  %th 発送日の目安
                  %td 
                    =@item.shipping_days
                    
          .page_manage
            .seller_btn
              - if user_signed_in? && current_user.id == @item.seller_id   

                .item-edit-btn
                =limk_to "編集画面に進む", item_edit_path,class: "item-edit-btn"
                .item-delete-btn 
                =link_to "削除する", information_path, method: :delete, class: "item-delete-btn"
                  
            .buyer_btn
              %a.item-buy-btn{href: "#"}
                購入画面に進む

